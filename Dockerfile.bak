FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

# Copy source files
COPY . .

# Build the application
RUN npm run build

# Verify dist exists
RUN ls -la dist/

# Expose port
EXPOSE 3001

# Start the server
CMD ["node", "dist/main.js"]
